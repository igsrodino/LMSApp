<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="a2_xamarin.Views.QuizResults">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Quiz 1 - Week 1"
                   FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand"
                   Margin="0, 10, 0, 10"/>
            <Frame Margin="0, 0, 0, 5" HasShadow="false" CornerRadius="5" BackgroundColor="#F1F8E9">
                <StackLayout>
                    <Label Text="Results"  FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand"
                   Margin="0, 10, 0, 10"/>
                    <Label x:Name="NumOfCorrectAnswers" Text=""/>

                    <Button Text="Exit"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="End"
                Clicked="ReturnToCourse" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>